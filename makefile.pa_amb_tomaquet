PAT_SCREEN_CPP=$(PAT_FOLDER)/Graphics/Screen.cpp
PAT_SCREEN=$(FILE_OBJECTS_FOLDER)/PAT_Screen.o

PAT_SPRITE_H=$(PAT_FOLDER)/Graphics/Sprite.h
PAT_SPRITE_CPP=$(PAT_FOLDER)/Graphics/Sprite.cpp
PAT_SPRITE=$(FILE_OBJECTS_FOLDER)/PAT_Sprite.o

#Controller folder
