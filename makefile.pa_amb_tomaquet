#GameFolder
PAT_GAME_H=$(PAT_FOLDER)/Game/Game.h
PAT_GAME_CPP=$(PAT_FOLDER)/Game/Game.cpp
PAT_GAME=$(FILE_OBJECTS_FOLDER)/PAT_Game.o

.PHONY: $(PAT_SCREEN) $(PAT_SPRITE)

$(PAT_SCREEN): $(PAT_SCREEN_CPP) $(PAT_SCREEN_H)
	$(CC) $(COMPILER_FLAGS) $(I_SCREEN) $(LINKER_FLAGS) $< -o $@

$(PAT_SPRITE): $(PAT_SPRITE_CPP) $(PAT_SPRITE_H)
	$(CC) $(COMPILER_FLAGS) $(LINKER_FLAGS) $< -o $@


